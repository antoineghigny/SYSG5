void checkVulnerability()
{
    pipe(pipefd);
    if (fork() == 0)
    {
        close(pipefd[1]);
        read(pipefd[0], buf, sizeof(buf)-1);
	close(pipefd[0]);
        if (strstr(buf, "pkexec --version") == buf) {
            puts("System is not vulnerable");
	    exit(0);
        }else{
	    puts("System vulnerable");
	}
	
        exit(0);
    }
    close(pipefd[0]);
    close(pipefd[1]);
}